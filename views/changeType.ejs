    <div class="container">
        <div class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Type
                            <a href="#type_add" data-toggle="modal" style="float: right; margin:0;">
                                <button type="button" class="btn btn-primary">ADD
                                </button>
                            </a>
                            <form action="insertType" method="post">
                                <div class="modal fade" id="type_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;
                                                </button>
                                                <h4 class="modal-title">Edit Type</h4>
                                            </div>
                                            <div class="modal-body row">
                                                <div class="modal-content">
                                                    <div class="col-md-7">
                                                        <div class="form-group">
                                                            <label> Name</label>
                                                            <input id="name" class="form-control" name="type_name">
                                                        </div>
                                                        <div class="pull-right">
                                                            <button type="submit" class="btn btn-primary">提交
                                                            </button>

                                                        </div>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover"
                                   id="dataTables-example">
                                <thead>
                                <tr>
                                    <th style="display: none;">ID</th>
                                    <th>Name</th>
                                    <th>changes</th>
                                    <th>delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% typeName.forEach(function (typeName) { %>
                                <tr id="<%= typeName.TypeID %>" class="odd gradeX">
                                    <td style="display: none;"><%= typeName.TypeID %></td>
                                    <td><%= typeName.TypeName%></td>
                                    <td class="center">
                                        <a href="#type_changes<%= typeName.TypeID %>" data-toggle="modal">
                                            <button type="button" class="btn btn-primary">changes</button>
                                        </a>
                                    </td>
                                    <td class="center">
                                        <button type="button" class="btn btn-primary"
                                                onclick="type_delete(<%= typeName.TypeID %>)">delete
                                        </button>
                                    </td>
                                </tr>

                                <form action="updateType" method="post">
                                    <div class="modal fade" id="type_changes<%= typeName.TypeID %>" tabindex="-1"
                                         role="dialog"
                                         aria-labelledby="myModalLabel"
                                         aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal"
                                                            aria-hidden="true">
                                                        &times;
                                                    </button>
                                                    <h4 class="modal-title">Edit Type</h4>
                                                </div>
                                                <div class="modal-body row">
                                                    <div class="modal-content">
                                                        <div class="col-md-7">
                                                            <div class="form-group">
                                                                <label> Name</label>
                                                                <input style="display:none;" name="Index" id="link"
                                                                       value="<%= typeName.TypeID %>"
                                                                       class="form-control">
                                                                <input name="name" id="link"
                                                                       value="<%= typeName.TypeName%>"
                                                                       class="form-control">
                                                            </div>
                                                            <div class="pull-right">
                                                                <button type="submit" class="btn btn-primary">提交
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
